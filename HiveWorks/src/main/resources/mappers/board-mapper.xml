<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">
	<resultMap type="board" id="boardMap">
	    <id column="board_No" property="boardNo"/>
	    <result column="board_Title" property="boardTitle"/>
	    <result column="board_Content" property="boardContent"/>
	    <result column="board_Count" property="boardCount"/>
	    <result column="create_Date" property="createDate"/>
	    <result column="creater" property="creater"/>
	    <result column="modify_Date" property="modifyDate"/>
	</resultMap>
	<select id="selectAllBoard" resultMap="boardMap">
        SELECT * FROM TBL_BOARD WHERE BOARD_TYPE = 'BRD001'
    </select>
    <insert id="insertBoard" parameterType="board">
    	 INSERT INTO TBL_BOARD (BOARD_TYPE, BOARD_TITLE, BOARD_CONTENT, BOARD_COUNT, CREATE_DATE, CREATER, MODIFY_DATE)
    	 VALUES ('BRD001', #{boardTitle}, #{boardContent}, #{boardCount}, #{createDate}, #{creater}, #{modifyDate})
	</insert>
</mapper>